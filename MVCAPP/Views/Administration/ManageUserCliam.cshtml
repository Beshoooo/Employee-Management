@model UserClaimViewModel

@{
    ViewData["Title"] = "Manage Claims";
}

<form method="post">
    <div class="card mt-3">
        <div class="card-header">
            Manage User Claims
        </div>
        <div class="card-body">
            <input asp-for="@Model.UserId" class="form-check-input" hidden>
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="card-title">
                    <input asp-for="@Model.Claims[i].ClaimType" class="form-check-input" hidden>
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input">
                    <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">@Model.Claims[i].ClaimType</label>
                </div>
            }
            
        </div>
        <div class="card-footer">
            <input type="submit"class="btn btn-primary" value="Update">
            <a asp-controller="Administration" asp-action="EditUser"
               asp-route-UserId="@Model.UserId" class="btn btn-light">Cancel</a>
        </div>
    </div>
</form>
