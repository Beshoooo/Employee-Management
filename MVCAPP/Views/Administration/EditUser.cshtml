@model EditUserViewModel
@{
    ViewData["Title"] = "Edit User";

}

<h1 class="display-4">Edit User</h1>

<form method="post" class="mb-3">
    <div class="EditUser">

        <div class="mb-3">
            <label asp-for="@Model.UserId" class="form-label"></label>
            <input asp-for="@Model.UserId" class="form-control col-10" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label"></label>
            <input asp-for="@Model.Email" class="form-control col-10" id="Email" aria-describedby="emailHelp" />
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="@Model.UserName" class="form-label"></label>
            <input asp-for="@Model.UserName" class="form-control col-10" />
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="@Model.City" class="form-label"></label>
            <input asp-for="@Model.City" class="form-control col-10" />
            <span asp-validation-for="@Model.City" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Administration" asp-action="ListUsers" class="btn btn-light">Cancel</a>
    </div>
</form>

@*Code for Roles*@
@if (Model.Roles.Any())
{
    <div class="card mb-2">
        <div class="card-header">
            User Role
        </div>
        <div class="card-body">
            @foreach (var role in Model.Roles)
            {
                <h5 class="card-title">@role</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="ManageUserRole"
                asp-route-UserId="@Model.UserId" class="btn btn-primary">Manage Roles</a>
        </div>
    </div>
}
else
{
    <div class="card mt-2">
        <div class="card-header">
            User Role
        </div>
        <div class="card-body">
            <h5 class="card-title">None at this moment</h5>
            <a asp-controller="Administration" asp-action="ManageUserRole"
                asp-route-UserId="@Model.UserId" class="btn btn-primary">Manage Roles</a>
        </div>
    </div>

}

@*Code for Claims*@
@if (Model.Claims.Any())
{
    <div class="card mb-2">
        <div class="card-header">
            User Claims
        </div>
        <div class="card-body">
            @foreach (var claim in Model.Claims)
            {
                <h5 class="card-title">@claim</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="ManageUserCliam"
                asp-route-UserId="@Model.UserId" class="btn btn-primary">Manage Claims</a>
        </div>
    </div>
}
else
{
    <div class="card mt-2">
        <div class="card-header">
            User Claims
        </div>
        <div class="card-body">
            <h5 class="card-title">None at this moment</h5>
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="ManageUserCliam" 
                asp-route-UserId="@Model.UserId" class="btn btn-primary">Manage Claims</a>
        </div>
    </div>

}





