@model EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h3 class="display-4">Edit Role</h3>
<form asp-controller="Administration" asp-action="EditRole" method="post">

    <div class="form-group mb-2">
        <label asp-for="RoleId" class="form-label"></label>
        <input asp-for="RoleId" disabled class="form-control" />
        <input asp-for="RoleId" hidden class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="RoleName" class="form-label"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-light">Cancel</a>

</form>

<div class="card mt-3">
    <div class="card-header">
        Users in the role
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <h5 class="card-title">@user</h5>
            }
 
        }
        else 
        {
            <h5 class="card-title">None at the moment</h5>
        }
            
    </div>
    <div class="card-footer">
        <a asp-controller="Administration" asp-action="EditUsersInRole"
            asp-route-RoleId="@Model.RoleId" class="btn btn-primary">Add or remove users</a>
    </div>
</div>
